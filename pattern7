function starSquare(n)
{
for(let i=0;i<n;i++)
{
    // space
    let pattern="";
    for(let j=0;j<n-i-1;j++)
    {
        pattern+=" ";
    }
    // star
    for(let j=0;j<2*i+1;j++)
    {
        pattern+="*";
    }
    
    // space
    
    for(let j=0;j<n-i-1;j++)
    {
       pattern+=" ";   
    }
    console.log(pattern)

}

}
starSquare(7);
